<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/siteListFragment">

    <fragment
        android:id="@+id/siteListFragment"
        android:name="fr.spc.leosoliveres.nightly.view.ui.SiteListFragment"
        android:label="SiteListFragment" >
        <action
            android:id="@+id/action_siteListFragment_siteDetailFragment"
            app:destination="@id/siteDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="site"
                app:argType="fr.spc.leosoliveres.chaldeas.model.Site" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/siteDetailFragment"
        android:name="fr.spc.leosoliveres.nightly.view.ui.SiteDetailFragment"
        android:label="fragment_site_detail"
        tools:layout="@layout/fragment_site_detail" />
    <fragment
        android:id="@+id/reportEditFragment"
        android:name="fr.spc.leosoliveres.nightly.view.ui.ReportEditFragment"
        android:label="ReportEditFragment" />
    <action
        android:id="@+id/action_global_editFragment"
        app:destination="@id/reportEditFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />
</navigation>